[
	{
		"name": "restrict-cert-access",
		"precondition": "/etc/ssl/.*",
		"rules": {
			"pathRule": {
				"fromSource": "/bin/bash",
				"path" : [ "/etc/ssl/", "/etc/pki/" ],
				"recursive": true
			}
		},
		"onEvent": {
			"severity": 2,
			"message": "restrict access to certificate data",
			"tags": [ "PCI-DSS", "MITRE-ID-T1082" ],
			"action": "Audit"
		}
	},
	{
		"name": "maint-tool-access",
		"precondition": "/sbin/apk",
		"rules": {
			"pathRule": {
				"path" : [ "/sbin/" ],
				"recursive": true
			}
		},
		"onEvent": {
			"severity": 1,
			"message": "restricted maintenance tool access attempted",
			"tags": [ "PCI-DSS", "MITRE-ID-T1518" ],
			"action": "Audit"
		}
	}
]
